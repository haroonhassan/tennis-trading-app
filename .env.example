# Tennis Trading App Configuration
# Copy this file to .env and update with your actual values

# Environment
ENVIRONMENT=development
DEBUG=true

# Application
SECRET_KEY=your-secret-key-here-change-in-production

# Backend Settings
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# Frontend Settings  
FRONTEND_PORT=3000

# Database
DATABASE_URL=sqlite:///./tennis_trading.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/tennis_trading

# Redis (for real-time features)
REDIS_URL=redis://localhost:6379
WS_MESSAGE_QUEUE=redis://localhost:6379/1

# Betfair API Configuration
BETFAIR_USERNAME=your_betfair_username
BETFAIR_PASSWORD=your_betfair_password
BETFAIR_APP_KEY=your_application_key
BETFAIR_CERT_PATH=/path/to/your/certificate.crt
BETFAIR_KEY_PATH=/path/to/your/private.key

# Optional Betfair Settings
BETFAIR_EXCHANGE_URL=https://api.betfair.com/exchange/
# For Australian exchange:
# BETFAIR_EXCHANGE_URL=https://api-au.betfair.com/exchange/

# API Keys (if using external services)
# ODDS_API_KEY=your_odds_api_key
# TENNIS_DATA_API_KEY=your_tennis_data_api_key

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Security
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Email (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# Trading Settings
DEFAULT_COMMISSION=0.05
MAX_EXPOSURE_LIMIT=1000
MIN_BET_SIZE=2
MAX_BET_SIZE=1000

# Feature Flags
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false
ENABLE_NOTIFICATIONS=false
ENABLE_ANALYTICS=true